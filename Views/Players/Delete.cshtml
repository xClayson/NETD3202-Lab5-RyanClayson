@model NETD3202_Lab5_RyanClayson.Models.Player

@{
    ViewData["Title"] = "Delete";
}
<div style="margin-left: 30%; margin-right: 10%;">
    <h1>Delete</h1>
    <hr />
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                First Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.firstName)
            </dd>
            <dt class="col-sm-2">
                Last Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.lastName)
            </dd>
            <dt class="col-sm-2">
                Year Drafted
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.yearDrafted)
            </dd>
            <dt class="col-sm-2">
                Team Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.teamName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="playerID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a style="color: black" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
