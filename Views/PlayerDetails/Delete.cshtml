@model NETD3202_Lab5_RyanClayson.Models.PlayerDetails

@{
    ViewData["Title"] = "Delete";
}
<div style="margin-left: 30%; margin-right: 10%;">
    <h1>Delete</h1>
    <hr />
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Player ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.pID)
            </dd>
            <dt class="col-sm-2">
                Age
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.playerAge)
            </dd>
            <dt class="col-sm-2">
                Height
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.playerHeight)
            </dd>
            <dt class="col-sm-2">
                Weight
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.playerWeight)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="pID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a style="color: blue" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
